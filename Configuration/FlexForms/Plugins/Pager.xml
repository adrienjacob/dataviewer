<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>

        <general_settings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.general_settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.logo>
                        <TCEforms>
                            <label></label>
                            <config>
                                <type>user</type>
                                <userFunc>MageDeveloper\Dataviewer\UserFunc\Logo->displayLogoText</userFunc>
                            </config>
                        </TCEforms>
                    </settings.logo>

                    <settings.target_plugin>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.target_plugin</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tt_content</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.target_plugin>

                    <settings.per_page>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.per_page_entries</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <default>8,16,32,40</default>
                                <placeholder>8,16,32,40</placeholder>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.per_page>

                    <settings.compact_pages>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.compact_pages</label>
                            <onChange>reload</onChange>
                            <config>
                                <checkbox>1</checkbox>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.compact_pages>

                    <settings.left_right_pages>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.left_right_pages</label>
                            <displayCond>FIELD:settings.compact_pages:=:1</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <default>2</default>
                                <placeholder>2</placeholder>
                                <eval>trim,int</eval>
                            </config>
                        </TCEforms>
                    </settings.left_right_pages>

                    <settings.show_view_all>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.show_view_all</label>
                            <config>
                                <checkbox>1</checkbox>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.show_view_all>

                    <settings.clear_on_page_load>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.clear_on_page_load</label>
                            <config>
                                <checkbox>1</checkbox>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.clear_on_page_load>
                </el>
            </ROOT>
        </general_settings>

    </sheets>
</T3DataStructure> 
