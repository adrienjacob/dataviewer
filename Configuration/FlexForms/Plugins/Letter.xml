<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>

        <general_settings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.general_settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.logo>
                        <TCEforms>
                            <label></label>
                            <config>
                                <type>user</type>
                                <userFunc>MageDeveloper\Dataviewer\UserFunc\Logo->displayLogoText</userFunc>
                            </config>
                        </TCEforms>
                    </settings.logo>

                    <settings.target_plugin>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.target_plugin</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tt_content</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.target_plugin>

                    <settings.field_id>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:tx_dataviewer_domain_model_field</label>
                            <config>
                                <type>select</type>
                                <multiple>0</multiple>
                                <foreign_table>tx_dataviewer_domain_model_field</foreign_table>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">------------------------</numIndex>
                                        <numIndex index="1">--div--</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:record_title</numIndex>
                                        <numIndex index="1">title</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">------------------------</numIndex>
                                        <numIndex index="1">--div--</numIndex>
                                    </numIndex>
                                </items>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.field_id>

                    <settings.preselected_letter>
                        <TCEforms>
                            <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.preselected_letter</label>
                            <config>
                                <type>select</type>
                                <multiple>1</multiple>
                                <itemsProcFunc>MageDeveloper\Dataviewer\UserFunc\Letter->populateLetters</itemsProcFunc>
                                <autosizemax>10</autosizemax>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:no_preselection</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                </items>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.preselected_letter>

                </el>
            </ROOT>
        </general_settings>


    </sheets>
</T3DataStructure> 
