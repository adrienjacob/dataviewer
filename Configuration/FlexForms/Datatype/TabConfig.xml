<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tabs_fields</label>
                </TCEforms>
                <type>array</type>
                <el>
                    <field>
                        <section>1</section>
                        <type>array</type>
                        <title>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tabs_fields</title>
                        <el>
                            <tab>
                                <type>array</type>
                                <el>
                                    <tab_name>
                                        <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tab_name</label>
                                        <config>
                                            <type>input</type>
                                            <size>50</size>
                                            <placeholder>Tab Name</placeholder>
                                        </config>
                                    </tab_name>
                                    <tab_fields>
                                        <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tab_according_fields</label>
                                        <config>
                                            <type>select</type>
                                            <renderType>selectMultipleSideBySide</renderType>
                                            <itemsProcFunc>MageDeveloper\Dataviewer\UserFunc\Field->populateFieldsOnCurrentPid</itemsProcFunc>
                                            <maxitems>9999</maxitems>
                                            <minitems>1</minitems>
                                            <multiple>1</multiple>
                                            <size>5</size>
                                            <iconsInOptionTags>1</iconsInOptionTags>
                                            <autoSizeMax>10</autoSizeMax>
                                        </config>
                                    </tab_fields>
                                    <tab_icon>
                                        <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tab_icon</label>
                                        <config>
                                            <type>input</type>
                                            <size>50</size>
                                            <eval>trim</eval>
                                            <placeholder>fa-code</placeholder>
                                        </config>
                                    </tab_icon>
                                    <tab_icon_color>
                                        <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:flexform.tab_icon_color</label>
                                        <config>
                                            <type>input</type>
                                            <size>50</size>
                                            <placeholder>#EF5D00</placeholder>
                                            <eval>trim</eval>
                                            <wizards>
                                                <colorChoice>
                                                    <type>colorbox</type>
                                                    <module>
                                                        <name>wizard_colorpicker</name>
                                                    </module>
                                                    <exampleImg>EXT:dataviewer/Resources/Public/Images/color_wheel.png</exampleImg>
                                                    <JSopenParams>height=600,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                                                </colorChoice>
                                            </wizards>
                                        </config>
                                    </tab_icon_color>
                                </el>
                            </tab>
                        </el>
                    </field>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>

