<T3DataStructure>
    <ROOT>
        <type>array</type>
        <el>
            <info>
                <TCEforms>
                    <label></label>
                    <config>
                        <type>user</type>
                        <userFunc>MageDeveloper\Dataviewer\UserFunc\Text->displayTemplate</userFunc>
                        <parameters>
                            <template>EXT:dataviewer/Resources/Private/Templates/FieldConfiguration/Notice.html</template>
                        </parameters>
                    </config>
                </TCEforms>
            </info>
            <foreign_table>
                <TCEforms>
                    <label>foreign_table</label>
                    <config>
                        <type>select</type>
                        <multiple>1</multiple>
                        <itemsProcFunc>MageDeveloper\Dataviewer\UserFunc\Database->populateTablesAction</itemsProcFunc>
                        <autosizemax>2</autosizemax>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:please_select</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                        </items>
                        <maxitems>1</maxitems>
                        <minitems>1</minitems>
                        <size>1</size>
                    </config>
                </TCEforms>
            </foreign_table>
            <modelClass>
                <TCEforms>
                    <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:model_class</label>
                    <config>
                        <type>input</type>
                        <size>50</size>
                        <placeholder><![CDATA[VendorName\ExtensionName\Domain\Model\Class]]></placeholder>
                        <eval>trim,nospace</eval>
                    </config>
                </TCEforms>
            </modelClass>
            <foreign_record_defaults>
                <title>foreign_record_defaults</title>
                <section>1</section>
                <type>array</type>
                <el>
                    <defaults>
                        <type>array</type>
                        <el>
                            <field>
                                <TCEforms>
                                    <label>LLL:EXT:lang/Resources/Private/Language/locallang_core.xlf:show_item.php.field</label>
                                    <config>
                                        <type>input</type>
                                        <size>15</size>
                                    </config>
                                </TCEforms>
                            </field>
                            <default>
                                <TCEforms>
                                    <label>LLL:EXT:lang/locallang_general.xml:LGL.default_value</label>
                                    <config>
                                        <type>input</type>
                                        <size>15</size>
                                    </config>
                                </TCEforms>
                            </default>
                        </el>
                    </defaults>
                </el>
            </foreign_record_defaults>
            <minitems>
                <TCEforms>
                    <label>minitems</label>
                    <config>
                        <type>input</type>
                        <size>3</size>
                        <eval>int</eval>
                        <default>0</default>
                    </config>
                </TCEforms>
            </minitems>
            <maxitems>
                <TCEforms>
                    <label>maxitems</label>
                    <config>
                        <type>input</type>
                        <size>3</size>
                        <eval>int</eval>
                        <default>999</default>
                    </config>
                </TCEforms>
            </maxitems>
            <pid_config>
                <TCEforms>
                    <label>LLL:EXT:lang/locallang_tca.xlf:sys_file.storage</label>
                    <config>
                        <type>select</type>
                        <foreign_table>pages</foreign_table>
                        <renderType>selectTree</renderType>
                        <multiple>0</multiple>
                        <minitems>0</minitems>
                        <maxitems>1</maxitems>
                        <treeConfig>
                            <expandAll>1</expandAll>
                            <parentField>pid</parentField>
                            <appearance>
                                <showHeader>1</showHeader>
                            </appearance>
                        </treeConfig>
                    </config>
                </TCEforms>
            </pid_config>
        </el>
    </ROOT>
</T3DataStructure>
