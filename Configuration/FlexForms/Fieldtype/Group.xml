<T3DataStructure>
    <ROOT>
        <type>array</type>
        <el>
            <info>
                <TCEforms>
                    <label></label>
                    <config>
                        <type>user</type>
                        <userFunc>MageDeveloper\Dataviewer\UserFunc\Text->displayTemplate</userFunc>
                        <parameters>
                            <template>EXT:dataviewer/Resources/Private/Templates/FieldConfiguration/Notice.html</template>
                        </parameters>
                    </config>
                </TCEforms>
            </info>
            <internal_type>
                <TCEforms>
                    <label>internal_type</label>
                    <onChange>reload</onChange>
                    <config>
                        <type>select</type>
                        <renderType>selectSingle</renderType>
                        <multiple>0</multiple>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">file</numIndex>
                                <numIndex index="1">file</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">file_reference</numIndex>
                                <numIndex index="1">file_reference</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">folder</numIndex>
                                <numIndex index="1">folder</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">db</numIndex>
                                <numIndex index="1">db</numIndex>
                            </numIndex>
                        </items>
                        <maxitems>1</maxitems>
                        <minitems>0</minitems>
                        <size>1</size>
                    </config>
                </TCEforms>
            </internal_type>
            <allowed>
                <TCEforms>
                    <label>allowed</label>
                    <config>
                        <type>input</type>
                        <size>30</size>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </allowed>
            <disallowed>
                <TCEforms>
                    <label>disallowed</label>
                    <config>
                        <type>input</type>
                        <size>15</size>
                        <default>*</default>
                    </config>
                </TCEforms>
            </disallowed>
            <modelClass>
                <TCEforms>
                    <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:model_class</label>
                    <config>
                        <type>input</type>
                        <size>50</size>
                        <placeholder><![CDATA[VendorName\ExtensionName\Domain\Model\Class]]></placeholder>
                        <eval>trim,nospace</eval>
                    </config>
                </TCEforms>
            </modelClass>
            <suggest_wizard>
                <TCEforms>
                    <label>LLL:EXT:dataviewer/Resources/Private/Language/locallang.xlf:add_suggest_wizard</label>
                    <displayCond>FIELD:internal_type:=:db</displayCond>
                    <config>
                        <checkbox>1</checkbox>
                        <type>check</type>
                    </config>
                </TCEforms>
            </suggest_wizard>
            <minitems>
                <TCEforms>
                    <label>minitems</label>
                    <config>
                        <type>input</type>
                        <size>3</size>
                        <eval>int</eval>
                        <default>0</default>
                    </config>
                </TCEforms>
            </minitems>
            <maxitems>
                <TCEforms>
                    <label>maxitems</label>
                    <config>
                        <type>input</type>
                        <size>3</size>
                        <eval>int</eval>
                        <default>1</default>
                    </config>
                </TCEforms>
            </maxitems>
            <size>
                <TCEforms>
                    <label>size</label>
                    <config>
                        <type>input</type>
                        <size>3</size>
                        <eval>int</eval>
                        <default>1</default>
                    </config>
                </TCEforms>
            </size>
            <hideMoveIcons>
                <TCEforms>
                    <label>hideMoveIcons</label>
                    <config>
                        <checkbox>1</checkbox>
                        <type>check</type>
                    </config>
                </TCEforms>
            </hideMoveIcons>
            <multiple>
                <TCEforms>
                    <label>multiple</label>
                    <config>
                        <checkbox>1</checkbox>
                        <type>check</type>
                    </config>
                </TCEforms>
            </multiple>
            <uploadfolder>
                <TCEforms>
                    <label>uploadfolder</label>
                    <displayCond>FIELD:internal_type:=:file</displayCond>
                    <config>
                        <type>input</type>
                        <size>15</size>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </uploadfolder>
            <disable_controls>
                <TCEforms>
                    <label>disable_controls</label>
                    <config>
                        <type>select</type>
                        <renderType>selectMultipleSideBySide</renderType>
                        <multiple>0</multiple>
                        <autosizemax>5</autosizemax>
                        <items type="array">
                            <!--<numIndex index="0" type="array">
                                <numIndex index="0">browser</numIndex>
                                <numIndex index="1">browser</numIndex>
                            </numIndex>-->
                            <numIndex index="1" type="array">
                                <numIndex index="0">list</numIndex>
                                <numIndex index="1">list</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">upload</numIndex>
                                <numIndex index="1">upload</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">delete</numIndex>
                                <numIndex index="1">delete</numIndex>
                            </numIndex>
                        </items>
                        <maxitems>9999</maxitems>
                        <minitems>0</minitems>
                        <size>5</size>
                    </config>
                </TCEforms>
            </disable_controls>
        </el>
    </ROOT>
</T3DataStructure>
